        <% if (typeof errorMessage !=="undefined" ) { %>
          <script>
            Swal.fire({
              icon: 'error',
              title: 'Oops...',
              text: "<%= errorMessage %>",
            })
            </script>
        <% } %>
        <% if (typeof successMessage !== "undefined") { %>
          <script>
            swal({
              title: "Good job!",
              text: "<%= successMessage %>",
              icon: "success",
            });
            </script>
        <% } %>
      <script src="feedback.js"></script>

